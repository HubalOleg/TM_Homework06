<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding">

    <View
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:layout_gravity="center"
        android:background="@drawable/img_illuminate"/>

    <Button
        android:layout_width="@dimen/view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:background="@drawable/btn_background"
        android:text="@string/btn_text"
        android:textColor="@color/btn_text_color"
        android:textSize="@dimen/btn_text_size"/>

    <EditText
        android:layout_width="@dimen/view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:textSize="@dimen/et_text_size"
        android:text="@string/first_et_text"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:focusable="true"
        android:clickable="true"/>
    <EditText
        android:layout_width="@dimen/view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:textSize="@dimen/et_text_size"
        android:text="@string/second_et_text"
        android:gravity="center"
        android:background="@drawable/et_background"/>
    <EditText
        android:layout_width="@dimen/view_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:textSize="@dimen/et_text_size"
        android:text="@string/third_et_text"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:enabled="false"/>
    <TextView
        android:layout_width="@dimen/view_size"
        android:layout_height="wrap_content"
        android:background="@drawable/nine_patch_image"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:text="@string/latin_9patch"/>
    <Button
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:background="@drawable/rotated_rectangle"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>


